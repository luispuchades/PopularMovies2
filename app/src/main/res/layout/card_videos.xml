<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/movie_detail_reviews_card_margin"
    app:cardElevation="@dimen/movie_grid_card_view_elevation" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_video_thumbnail"
        android:contentDescription="@string/movie_detail_video_thumbnail_label" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_trailer_loading_indicator"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/activity_horizontal_margin" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_video_thumbnail_error"
        android:layout_gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        app:srcCompat="@drawable/ic_error_outline_red"
        android:contentDescription="@string/movie_detail_video_thumbnail_error_label"
        android:visibility="invisible" />

</android.support.v7.widget.CardView>